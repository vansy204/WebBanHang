@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}
@{
    Layout = "_Layout";
    Layout = "_LoginLayout";
}
}
<div>
    @await Html.PartialAsync("_LoginPartial")
</div>

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" onsubmit="return confirmLogout();">
                <button type="submit" class="btn btn-danger">Click here to Logout</button>
            </form>
        }
        else
        {
            <p>You have successfully logged out of the application.</p>
            <a href="@Url.Page("/", new { area = "" })" class="btn btn-primary">Go to Homepage</a>
        }
    }
</header>

<script>
    function confirmLogout() {
        return confirm("Are you sure you want to log out?");
    }
</script>
