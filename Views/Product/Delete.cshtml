@model WebsiteBanHang.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container">
    <div class="row">
        <div class="col s12">
            <h3 class="center-align red-text">Delete Product</h3>
            <h5 class="center-align grey-text">Are you sure you want to delete this product?</h5>
            <div class="divider"></div>
        </div>
    </div>

    <div class="row">
        <div class="col s12 m10 offset-m1 l8 offset-l2">
            <div class="card-panel z-depth-2" style="border-radius: 10px;">
                <h5 class="blue-grey-text">Product Details</h5>
                <div class="divider" style="margin-bottom: 20px;"></div>

                <div class="row valign-wrapper">
                    <div class="col s4 center-align">
                        <!-- If you have product image, display it here -->
                        <i class="material-icons large blue-grey-text">shopping_bag</i>
                    </div>
                    <div class="col s8">
                        <ul class="collection">
                            <li class="collection-item">
                                <div><span class="grey-text">Name:</span>
                                    <span class="black-text">@Html.DisplayFor(model => model.Name)</span></div>
                            </li>
                            <li class="collection-item">
                                <div><span class="grey-text">Price:</span>
                                    <span class="green-text">@Html.DisplayFor(model => model.Price) VND</span></div>
                            </li>
                            <li class="collection-item">
                                <div><span class="grey-text">Description:</span>
                                    <span class="black-text">@Html.DisplayFor(model => model.Description)</span></div>
                            </li>
                            <li class="collection-item">
                                <div><span class="grey-text">Category:</span>
                                    <span class="blue-text">@Html.DisplayFor(model => model.Category.Name)</span></div>
                            </li>
                        </ul>
                    </div>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="row" style="margin-top: 20px;">
                        <div class="col s6 center-align">
                            <a asp-action="Index" class="btn waves-effect waves-light blue-grey">
                                <i class="material-icons left">arrow_back</i>Back to List
                            </a>
                        </div>
                        <div class="col s6 center-align">
                            <button type="submit" class="btn waves-effect waves-light red darken-1">
                                <i class="material-icons left">delete</i>Delete
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>