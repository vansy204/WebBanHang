@model WebsiteBanHang.Models.Product

<div class="container">
    <div class="row">
        <div class="col s12">
            <h3 class="center-align blue-text text-darken-1">Product Details</h3>
            <div class="divider"></div>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <div class="card horizontal z-depth-3" style="border-radius: 10px; overflow: hidden;">
                <div class="card-image hide-on-small-only" style="max-width: 40%; display: flex; align-items: center; justify-content: center; background-color: #f5f5f5;">
                    <img src="@Model.ImageUrl" alt="@Model.Name" style="max-height: 300px; max-width: 100%; object-fit: contain; padding: 20px;">
                </div>
                <div class="card-stacked">
                    <div class="card-content">
                        <div class="hide-on-med-and-up center-align" style="margin-bottom: 20px;">
                            <img src="@Model.ImageUrl" alt="@Model.Name" style="max-height: 200px; max-width: 100%; object-fit: contain;">
                        </div>

                        <span class="card-title blue-text">@Model.Name</span>
                        <div class="divider" style="margin: 10px 0 20px 0;"></div>

                        <div class="row" style="margin-bottom: 10px;">
                            <div class="col s4 grey-text">Price:</div>
                            <div class="col s8 green-text text-darken-1">
                                <h5>@Model.Price.ToString("#,##0") VND</h5>
                            </div>
                        </div>

                        <div class="row" style="margin-bottom: 10px;">
                            <div class="col s4 grey-text">Category:</div>
                            <div class="col s8">
                                <div class="chip blue white-text">
                                    <i class="material-icons left">category</i>
                                    @Model.Category?.Name
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s4 grey-text">Description:</div>
                            <div class="col s8">@Model.Description</div>
                        </div>
                    </div>
                    <div class="card-action">
                        <!-- Actions for Admin -->
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="row" style="margin-bottom: 10px;">
                                <div class="col s6 center-align">
                                    <a asp-action="Update" asp-route-id="@Model?.Id" class="btn waves-effect waves-light amber darken-2">
                                        <i class="material-icons left">edit</i>Edit
                                    </a>
                                </div>
                                <div class="col s6 center-align">
                                    <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn waves-effect waves-light red">
                                        <i class="material-icons left">delete</i>Delete
                                    </a>
                                </div>
                            </div>
                        }

                        <!-- Back Button -->
                        <div class="center-align" style="margin-top: 10px;">
                            <a asp-action="Index" class="btn-flat waves-effect waves-blue">
                                <i class="material-icons left">arrow_back</i>Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>