@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!-- Navbar with Material Design style -->
<nav class="light-blue lighten-1">
    <div class="nav-wrapper container">
        <a href="#" class="brand-logo">Your Brand</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
            @if (SignInManager.IsSignedIn(User))
            {
                <li>
                    <a id="manage" class="waves-effect waves-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                        <i class="material-icons left">account_circle</i> Hello @UserManager.GetUserName(User)
                    </a>
                </li>
                <li>
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Product", new { area = "" })">
                        <button id="logout" type="submit" class="waves-effect waves-light btn-flat">
                            <i class="material-icons left">exit_to_app</i> Logout
                        </button>
                    </form>
                </li>
            }
            else
            {
                <li>
                    <a class="waves-effect waves-light btn" href="/Identity/Account/Register">Register</a>
                </li>
                <li>
                    <a class="waves-effect waves-light btn secondary" href="/Identity/Account/Login">Login</a>
                </li>
            }
        </ul>
    </div>
</nav>

<!-- Ensure you have Materialize CSS and JS files included in your layout or page -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
