@model ShoppingCart 
<h2>Your Cart</h2>
<table>
    <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
    </tr>
    @foreach (var item in Model.Items){
        <tr>
            <td>@item.Name</td>
            <td>@item.Quantity</td>
            <td>@item.Price</td>
            <td>@(item.Price * item.Quantity)</td>
            <td>

                <a class="btn btn-danger btn-lg btn-block" asp-action="RemoveFromCart" asp-route-productId="@item.ProductId">Remove</a>
                <a class="btn btn-primary btn-lg btn-block" asp-controller="ShoppingCart" asp-action="Checkout">Go to checkout</a>
            </td>
        </tr>
}
</table>