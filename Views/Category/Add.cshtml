@model WebsiteBanHang.Models.Category
@{
    ViewData["Title"] = "Add";
}

<h1 class="center-align">Add Category</h1>

<h4 class="center-align">Category</h4>
<hr />

<!-- Container for Materialize layout -->
<div class="container">
    <div class="row">
        <div class="col s12 m6 l4 offset-l4">
            <!-- Form wrapped in a card -->
            <div class="card">
                <div class="card-content">
                    <form asp-action="Add">
                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="input-field">
                            <label asp-for="Name" for="Name" class="active"></label>
                            <input asp-for="Name" id="Name" type="text" class="validate" />
                            <span asp-validation-for="Name" class="helper-text red-text"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn waves-effect waves-light" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Back Link -->
    <div class="center-align">
        <a asp-action="Index" class="btn-flat">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- Import Materialize CSS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">

<!-- Import Materialize JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
