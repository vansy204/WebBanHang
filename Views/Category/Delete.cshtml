@model WebsiteBanHang.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<h1 class="center-align">Delete Category</h1>

<div class="container">
    <div class="row">
        <div class="col s12 m6 l4 offset-l4">
            <!-- Card for Delete Confirmation -->
            <div class="card">
                <div class="card-content">
                    <h5 class="center-align">Are you sure you want to delete this?</h5>

                    <h4>Category</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col s4">Name:</dt>
                        <dd class="col s8">@Html.DisplayFor(model => model.Name)</dd>
                    </dl>
                </div>
                <div class="card-action">
                    <!-- Delete and Back buttons -->
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn red waves-effect waves-light">Delete</button>
                    </form>
                    <a asp-action="Index" class="btn-flat waves-effect waves-light">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Import Materialize CSS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">

<!-- Import Materialize JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
